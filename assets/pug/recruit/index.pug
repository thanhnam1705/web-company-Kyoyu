extends ../_layouts/default

block vars
  -title        = ''
  -description  = ''
  -keywords     = ''
  -pageID       = 'recruit'
  -path         = '..'
  -imgPC        = path+'/img/'+pageID+'/'
  -imgSP        = path+'/img/'+pageID+'/sp/'

block container
  +keyvisual({
    alt: '採用情報RECRUIT',
    TitleJp: '採用情報',
    TitleEn: 'RECRUIT',
  })

  section.section-experience
    .wrapper
      .experience-group
        .group-content
          h2.experience-title
            | 京友では経験、未経験を問わず
            br
            | 意欲と向上心のある方を歓迎します
          p.experience-text
            | 現在募集中の採用情報はこちらです。
            br
            | お電話またはメ―ルにてお気軽にお問い合わせください。
        figure.group-image
          img.md(src=imgPC+'img_experience_01.png' width='205' height='241' alt='京友では経験、未経験を問わず<br>意欲と向上心のある方を歓迎します' loading='lazy')
          img.sm(src=imgSP+'img_experience_01.png' width='205' height='242' alt='京友では経験、未経験を問わず<br>意欲と向上心のある方を歓迎します' loading='lazy')
      ul.experience-link
        li.link-item.background-blue
          a.trans(href='#job') 技術職
        li.link-item.background-orange
          a.trans(href='#work') 事務職
        li.link-item.background-green
          a.trans(href='#management') 管理職
      ul.experience-list
        li.item-image.order-one
          img.md.image-common(src=imgPC+'img_experience_02.jpg' width='230' height='230' alt='京友では経験、未経験を問わず意欲と向上心のある方を歓迎します' loading='lazy')
